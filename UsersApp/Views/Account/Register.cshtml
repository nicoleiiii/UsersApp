@using UsersApp.ViewModels
@model RegisterViewModel

@{
	ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Create an Account - Easy Commute</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style>
		body {
			background: url('/images/map.png') no-repeat center center fixed;
			background-size: cover;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			margin: 0;
			padding: 0;
		}

		.form-wrapper {
			background-color: rgba(0, 51, 102, 0.85); /* translucent blue */
			width: 450px;
			margin: 80px auto;
			padding: 30px 30px 30px;
			border-radius: 15px;
			color: white;
		}

			.form-wrapper h3 {
				text-align: center;
				font-weight: bold;
				font-size: 20px;
				margin-bottom: 20px;
			}

		label {
			font-weight: bold;
			font-size: 14px;
			display: block;
			margin-bottom: 5px;
		}

		.form-control {
			width: 100%;
			padding: 10px 14px;
			border: none;
			border-radius: 20px;
			margin-bottom: 8px;
			font-size: 14px;
		}

		.text-danger {
			font-size: 13px;
			color: #ffc0cb;
			margin-bottom: 10px;
			display: block;
		}

		.text {
			color: #e0e0e0;
			font-size: 12px;
			display: block;
			margin-top: 6px;
			margin-bottom: 12px;
		}

		.btn-register {
			width: 100%;
			background-color: #2563eb;
			padding: 10px;
			border: none;
			color: white;
			font-weight: bold;
			font-size: 15px;
			border-radius: 12px;
			cursor: pointer;
		}

			.btn-register:hover {
				background-color: #1e40af;
			}

		.links {
			text-align: center;
			margin-top: 15px;
		}

			.links a {
				color: #fff;
				text-decoration: underline;
				font-size: 14px;
			}
	</style>
</head>
<body>
	<div class="form-wrapper">
		<h3>CREATE AN ACCOUNT</h3>

		<form asp-action="Register" method="post">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>

			<button type="submit" class="btn-register">Register</button>

			<div class="links">
				<p>Already have an account? <a asp-controller="Account" asp-action="Login">Login</a></p>
				<p><a asp-controller="Home" asp-action="Index">Back to Home</a></p>
			</div>
		</form>
	</div>

	@section Scripts {
		@await Html.PartialAsync("_ValidationScriptsPartial")
	}
</body>
</html>
