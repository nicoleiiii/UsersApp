@using UsersApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Log In - Easy Commute</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        body {
            background: url('/images/map.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .form-wrapper {
            background-color: rgba(0, 51, 102, 0.85);
            width: 420px;
            margin: 80px auto;
            padding: 30px;
            border-radius: 15px;
            color: white;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }

            .form-wrapper h3 {
                text-align: center;
                font-weight: bold;
                font-size: 20px;
                margin-bottom: 20px;
            }

        label {
            font-weight: bold;
            font-size: 14px;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px 14px;
            border: none;
            border-radius: 20px;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .text-danger {
            font-size: 13px;
            color: #ffc0cb;
            margin-bottom: 10px;
            display: block;
        }

        .btn-login {
            width: 100%;
            background-color: #2563eb;
            padding: 10px;
            border: none;
            color: white;
            font-weight: bold;
            font-size: 15px;
            border-radius: 12px;
            cursor: pointer;
        }

            .btn-login:hover {
                background-color: #1e40af;
            }

        .extra-links {
            text-align: center;
            margin-top: 15px;
        }

            .extra-links a {
                color: #fff;
                text-decoration: underline;
                font-size: 14px;
            }

        .float-end a {
            font-size: 12px;
            color: #e0e0e0;
        }

        .form-check-label {
            font-size: 13px;
            color: #e0e0e0;
        }
    </style>
</head>
<body>
    <div class="form-wrapper">
        <h3>Welcome back! Please Log in</h3>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="float-end mb-2">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">Forgot password?</a>
            </div>

            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

            <button type="submit" class="btn-login">Login</button>

            <div class="extra-links">
                <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a></p>
                <p><a asp-controller="Home" asp-action="Index">Back to Home</a></p>
            </div>
        </form>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
    }
</body>
</html>
