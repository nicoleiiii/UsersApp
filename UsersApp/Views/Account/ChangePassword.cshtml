@using UsersApp.ViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = null;   // remove this line if you prefer your shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Change Password - Easy Commute</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        /* ----- shared background & font ----- */
        body {
            background: url('/images/map.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* ----- card wrapper ----- */
        .form-wrapper {
            background-color: rgba(0, 51, 102, 0.85); /* translucent blue */
            width: 420px;
            margin: 80px auto;
            padding: 30px;
            border-radius: 15px;
            color: white;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.30);
        }

            .form-wrapper h3 {
                text-align: center;
                font-weight: bold;
                font-size: 20px;
                margin-bottom: 20px;
            }

        /* ----- form elements ----- */
        label {
            font-weight: bold;
            font-size: 14px;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px ;
            border: none;
            border-radius: 20px;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .text-danger {
            font-size: 13px;
            color: #ffc0cb;
            margin-bottom: 10px;
            display: block;
        }

        .btn-primary-submit {
            width: 100%;
            background-color: #2563eb;
            padding: 10px;
            border: none;
            color: white;
            font-weight: bold;
            font-size: 15px;
            border-radius: 12px;
            cursor: pointer;
        }

            .btn-primary-submit:hover {
                background-color: #1e40af;
            }

        .back-link, .back-link a {
            text-align: center;
            margin-top: 15px;
            color: #fff;
            font-size: 14px;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="form-wrapper">
        <h3>CHANGE PASSWORD</h3>

        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmNewPassword"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary-submit">Submit</button>

            <div class="back-link">
                <a asp-controller="Account" asp-action="VerifyEmail">Back</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
